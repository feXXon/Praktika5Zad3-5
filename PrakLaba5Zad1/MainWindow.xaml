<Window x:Class="PrakLaba5Zad1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrakLaba5Zad1"
        mc:Ignorable="d"
       Title="Конфеты в кг" Height="400" Width="600" Background="Orange">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="155"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Content="1кг конфет имеет стоимость 98р." Margin="5, 5, 5, 5" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center"/>


        <Label Content="Введите сколько кг:" Margin="5, 5, 5, 5" Grid.Row="1" />
        <TextBox x:Name="txt1" Grid.Column="1" Margin="8" Grid.Row="1"/>

        <TextBox x:Name="txt2" Grid.Column="1" Margin="8" Grid.Row="2"/>
        <Label Content="Стоимость:" Margin="5, 5, 5, 5" Grid.Row="2" HorizontalAlignment="Center"/>
        


        <Button Grid.Row="2" Content="Считать" Margin="28,61,28,-41" Click="Button_Click" Grid.Column="1"/>

    </Grid>
</Window>
